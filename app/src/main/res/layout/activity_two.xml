<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:focusable="false"
            android:enabled="true"
            android:cursorVisible="false"
            android:hint="Число для перевода" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Система счисления:"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonBin"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="2"
            android:onClick="buttonClick"
            android:text="2" />

        <Button
            android:id="@+id/buttonOct"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="8"
            android:onClick="buttonClick"
            android:text="8" />

        <Button
            android:id="@+id/buttonDec"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:contentDescription="10"
            android:onClick="buttonClick"
            android:text="10" />

        <Button
            android:id="@+id/buttonHex"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:contentDescription="16"
            android:onClick="buttonClick"
            android:text="16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:background="#D6D7D7"
            android:gravity="center_vertical|center_horizontal"
            android:text="2:"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultBin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:hint="Ответ в двоичной сиситеме"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:background="#D6D7D7"
            android:gravity="center_vertical|center_horizontal"
            android:text="8:"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultOct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:hint="Ответ в восьмиричной системе"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:background="#D6D7D7"
            android:text="10:"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:hint="Ответ в десятичной системе"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:background="#D6D7D7"
            android:gravity="center_vertical|center_horizontal"
            android:text="16:"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultHex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:hint="Ответ в шестнадцатиричной системе"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/resultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorPrimaryLight"
        android:fontFamily="sans-serif"
        android:onClick="buttonClick"
        android:text="Перевести"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button7"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="7"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button4"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="4"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button1"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="1"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button0"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="0"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button8"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="8"

                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="5"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="2"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonComma"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription=","
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button9"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="9"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="6"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="3"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="C"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonA"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="a"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="A"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonB"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="b"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="B"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonC"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="c"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="C"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonD"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="d"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="D"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonE"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="e"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="E"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonF"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="f"
                android:fontFamily="sans-serif"
                android:onClick="buttonClick"
                android:text="F"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>